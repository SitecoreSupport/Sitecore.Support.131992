<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <contentSearch>
      <indexConfigurations>
        <defaultSolrIndexConfiguration>
          <virtualFields>
            <processors>
              <add fieldName="_fullpath" type="Sitecore.ContentSearch.VirtualFields.FullPathFieldProcessor, Sitecore.ContentSearch">
                <patch:delete/>
              </add>
            </processors>
          </virtualFields>
        </defaultSolrIndexConfiguration>
      </indexConfigurations>
    </contentSearch>
    <pipelines>
      <contentSearch.formatQueryFieldValue>
        <processor patch:instead="*[@type='Sitecore.ContentSearch.SolrProvider.Pipelines.FormatQueryFieldValue.ApplyFieldMappingRule, Sitecore.ContentSearch.SolrProvider']" type="Sitecore.Support.ContentSearch.SolrProvider.Pipelines.FormatQueryFieldValue.ApplyFieldMappingRule, Sitecore.Support.131992" />
      </contentSearch.formatQueryFieldValue>
    </pipelines>
  </sitecore>
</configuration>
